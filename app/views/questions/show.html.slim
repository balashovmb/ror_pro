b= @question.title
br
= @question.body
- if current_user.try(:author?, @question)
 p= link_to 'Delete question', @question, method: :delete, data: { confirm: 'Are you shure?' }
hr

.answers
  - if @question.answers.empty?
    b No answers
  - else
    = render @question.answers
 
- if user_signed_in?
  = form_for [@question, @question.answers.new], remote: true do |f|
    = f.label :body, 'Answer'
    .answer-errors
    = f.text_area :body
    <br>
    = f.submit 'Create answer'
- else
  i You must sign in first for create answer
  br

= link_to 'All questions', questions_path
